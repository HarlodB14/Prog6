@model beestje_op_je_feestje.ViewModels.BookingViewModel
@{
    ViewData["Title"] = "Stap 1 - Kies je beestjes";
}

<div class="container mt-4">
    <h1 class="text-center display-4 fw-bold text-primary">@ViewData["Title"]</h1>
    <p class="text-center text-muted fs-5">Kies een leuke dier(e)n voor op je feestje!</p>

    <ul class="nav nav-pills nav-fill mb-5">
        <li class="nav-item">
            <a class="nav-link active fw-semibold" href="#">1. Beestjes</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-secondary fw-semibold" href="#">2. Gegevens</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-secondary fw-semibold" href="#">3. Bevestiging</a>
        </li>
    </ul>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger shadow-sm">
            <strong>Corrigeer de volgende fouten:</strong>
            @Html.ValidationSummary()
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <form asp-action="BookingAnimalOverview" method="post" id="animal-selection-form">
                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="row g-4">
                    @foreach (var animal in Model.Animals)
                    {
                        <div class="col-md-4">
                            <div class="card shadow-sm h-100">
                                <img src="@animal.ImageUrl" class="card-img-top rounded-top" alt="@animal.Name" style="height: 180px; object-fit: cover;">
                                <div class="card-body text-center d-flex flex-column justify-content-between">
                                    <h5 class="card-title fw-bold">@animal.Name</h5>
                                    <p class="card-text text-success fs-5 fw-semibold">@animal.Price.ToString("C0", new System.Globalization.CultureInfo("nl-NL"))</p>
                                    <label class="form-check-label">Selecteer</label>
                                    <div class="form-check d-flex justify-content-center mt-auto">
                                        <input type="checkbox" name="SelectedIdAnimals" value="@animal.Id"
                                               class="form-check-input"
                                               data-animal-name="@animal.Name"
                                               onchange="updateBookingOverview(this)"
                                        @(Model.SelectedIdAnimals.Contains(animal.Id) ? "checked" : "") />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <input type="hidden" asp-for="SelectedDate" />
                <input type="hidden" asp-for="DiscountType" />

                <div class="d-grid gap-2 mt-4">
                    <!-- Proceed to step 2 -->
                    <button type="submit" name="action" value="proceedToStep2" class="btn btn-primary btn-lg shadow-sm">
                        Ga door naar stap 2 <i class="bi bi-arrow-right"></i>
                    </button>
                </div>
            </form>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header text-white bg-primary">
                    <h5 class="mb-0">Boeking Overzicht</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>Datum:</strong>
                        <span class="text-muted">@Model.SelectedDate.ToString("dd/MM/yyyy")</span>
                    </li>
                    <li class="list-group-item">
                        <strong>Beestjes:</strong>
                        <span id="selected-animals">
                            @if (Model.SelectedIdAnimals.Any())
                            {
                                @string.Join(", ", Model.Animals.Where(a => Model.SelectedIdAnimals.Contains(a.Id)).Select(a => a.Name))
                            }
                            else
                            {
                                <span class="text-muted">Nog geen beestjes geselecteerd</span>
                            }
                        </span>
                    </li>
                </ul>
                <div class="card-footer text-center">
                    <p class="mb-0 text-muted">Selecteer je beestjes om verder te gaan.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function updateBookingOverview(checkbox) {
        const selectedAnimalsElement = document.getElementById("selected-animals");
        let selectedAnimals = selectedAnimalsElement.textContent.trim() !== "Nog geen beestjes geselecteerd"
            ? selectedAnimalsElement.textContent.split(", ")
            : [];

        const animalName = checkbox.getAttribute("data-animal-name");

        if (checkbox.checked) {
            selectedAnimals.push(animalName);
        } else {
            selectedAnimals = selectedAnimals.filter(name => name !== animalName);
        }

        selectedAnimalsElement.textContent = selectedAnimals.length
            ? selectedAnimals.join(", ")
            : "Nog geen beestjes geselecteerd";
    }
</script>
