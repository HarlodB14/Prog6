@model beestje_op_je_feestje.ViewModels.AccountViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header text-center bg-primary text-white">
                    <h2 class="mb-0">Account Details</h2>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <div class="rounded-circle bg-light d-inline-flex justify-content-center align-items-center"
                             style="width: 100px; height: 100px; font-size: 2rem; color: #007bff;">
                            <i class="bi bi-person-fill"></i>
                        </div>
                        <h4 class="mt-3 text-primary">@Model.First_Name @Model.Last_Name</h4>
                    </div>

                    <hr class="my-4">

                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-muted">Contact Informatie</h5>
                            <p class="fs-5">
                                <strong>Email:</strong> @Model.Email <br />
                                <strong>Tel:</strong> @Model.PhoneNumber <br />
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-muted">Adres</h5>
                            <p class="fs-5">
                                <strong>Straat:</strong> @Model.Street_Name @Model.Street_Number <br />
                                <strong>Woonplaats:</strong> @Model.City <br />
                            </p>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="text-center">
                        <h5 class="text-muted">Klantenkaart Info</h5>
                        <p class="fs-5">
                            <strong>Discount Type:</strong>
                            <span class="badge
                                     @(Model.DiscountType == "Silver" ? "bg-secondary" :
                                      Model.DiscountType == "Gold" ? "bg-warning" :
                                      Model.DiscountType == "Platinum" ? "bg-primary" : "bg-dark")">
                                     @Model.DiscountType
                            </span>
                        </p>
                    </div>

                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("Index", "Account")" class="btn btn-primary btn-lg w-50">Terug</a>
                </div>
            </div>
        </div>
    </div>
</div>
