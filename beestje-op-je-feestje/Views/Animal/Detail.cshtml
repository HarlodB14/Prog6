@model beestje_op_je_feestje.ViewModels.AnimalViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <img class="card-img-top img-fluid mx-auto d-block" src="@Model.ImageUrl" alt="@Model.Name" style="max-height: 250px; object-fit: contain;" />
                <div class="card-body">
                    <h5 class="card-title display-4 text-center text-primary">@Model.Name</h5>

                    <p class="card-text fs-4 text-center">
                        <strong>Type:</strong> @Model.Type <br />
                        <strong>Prijs:</strong> €@Model.Price
                    </p>

                    <a href="@Url.Action("Index", "Animal")" class="btn btn-primary btn-lg w-100">Terug</a>
                </div>
            </div>
        </div>
    </div>
</div>
